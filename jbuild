(jbuild_version 1)

(executable
 ((name basetests)
  (public_name basetests)
  (libraries (base crowbar))
  (modes (native))
 ))

(alias
 ((name runtest)
  (action (run ${exe:basetests.exe}))))

(alias
 ((name fuzz)
  (deps (basetests.exe (files_recursively_in input)))
  (action (run 
    "timeout" "--preserve-status" "25m"
    "bun" "-v"
    "--input=input"
    "--output=output"
    "--" ./basetests.exe))))
